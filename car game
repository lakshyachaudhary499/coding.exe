command=""
started=False
while True:
       command=input("instruction ")
       if command=="start":
        if started:
          print("the car has already started")
        else:
          started=True
          print("the car has been started")
       elif command=="stop":
        if not started:
          print ("the car has already stopped")
        else:
           started=False
           print("the car has stopped")
       elif command=="help":
        print("""start- to stop the car
                stop- to stop the car
                quit- to quit the game""")
       elif command=="quit":
        break 
       else :
        print(" i dont understand this")
        
            
